<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorClassBg"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        app:navigationIcon="@drawable/ic_chevron_left_black_24dp"
        android:layout_height="wrap_content"
        android:id="@+id/register_toolbar"
        android:background="@color/coloBarSelect1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/colorBar"
            android:layout_gravity="center"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@drawable/shape_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <EditText
                android:id="@+id/register_phone"
                android:hint="请输入手机号码"
                android:background="@drawable/shape_register"
                android:layout_width="0dp"
                android:layout_weight="7"
                android:drawableLeft="@mipmap/icon_phone"
                android:textSize="@dimen/sp_14"
                android:layout_height="@dimen/dp_40" />
            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="2.4"
                android:layout_height="@dimen/dp_30"
                android:textColor="@color/coloBarSelect1"
                android:text="获取验证码"/>
        </LinearLayout>
        <EditText
            android:id="@+id/register_verify"
            android:hint="请输入短信验证码"
            android:background="@drawable/shape_btn"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/icon_verify_code"
            android:textSize="@dimen/sp_14"
            android:layout_height="@dimen/dp_40"/>
        <EditText
            android:id="@+id/register_pwd"
            android:hint="请输入密码(6-20字母或数字)"
            android:background="@drawable/shape_btn"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/icon_pwd"
            android:textSize="@dimen/sp_14"
            android:layout_height="@dimen/dp_40" />
        <EditText
            android:id="@+id/register_pwd_ok"
            android:hint="再次输入密码"
            android:background="@drawable/shape_brbl"
            android:layout_width="match_parent"
            android:drawableLeft="@mipmap/icon_pwd"
            android:textSize="@dimen/sp_14"
            android:layout_height="@dimen/dp_40" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:id="@+id/btn_register_ok"
            android:text="注册"
            android:layout_marginTop="@dimen/dp_35"
            android:textColor="@color/colorBar"
            android:textStyle="bold"/>

    </LinearLayout>

</LinearLayout>