<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorClassBg1"
    android:layout_height="match_parent"
    tools:context=".fragment.MyFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:id="@+id/iv_my_image"
            android:background="@drawable/bg_me_header"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iv_my_header"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:src="@mipmap/icon_default_user"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_my_header"
            android:layout_centerVertical="true"
            android:text="登录/注册"
            android:id="@+id/tv_my_header"
            android:textStyle="bold"
            android:textColor="@color/colorBar"
            android:layout_marginLeft="@dimen/dp_10"/>
    </RelativeLayout>
    <TextView
        android:background="@color/colorBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5" />
    <LinearLayout
        android:background="@color/colorBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:id="@+id/tv_my_wait"
            android:gravity="center"
            android:text="待付款"
            android:drawableTop="@mipmap/icon_order_wait_pay"
            android:layout_height="@dimen/dp_45"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:drawableTop="@mipmap/icon_order_wait_confirm"
            android:layout_height="@dimen/dp_45"
            android:id="@+id/tv_my_confirm"
            android:gravity="center"
            android:text="待收货"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dp"
            android:drawableTop="@mipmap/icon_order_completed"
            android:layout_height="@dimen/dp_45"
            android:id="@+id/tv_my_comleted"
            android:gravity="center"
            android:text="已完成"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/colorClassBg"/>
        <TextView
            android:layout_width="0dp"
            android:drawableTop="@mipmap/icon_order"
            android:layout_height="@dimen/dp_45"
            android:id="@+id/tv_my_order"
            android:gravity="center"
            android:text="我的订单"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:background="@color/colorBar"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="@dimen/dp_130">
        <TextView
            android:id="@+id/tv_my_address"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:drawableLeft="@mipmap/icon_address"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:text="      收货管理"
            android:layout_weight="1"
            android:background="@drawable/shape_trtl"/>
        <TextView
            android:drawableLeft="@mipmap/icon_share"
            android:paddingLeft="@dimen/dp_10"
            android:id="@+id/tv_my_shape"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:paddingRight="@dimen/dp_10"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:text="      分享"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trtl"/>
        <TextView
            android:drawableLeft="@mipmap/icon_setting"
            android:paddingLeft="@dimen/dp_10"
            android:id="@+id/tv_my_setting"
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:text="      设置"
            android:drawableRight="@drawable/ic_chevron_right_black_24dp"
            android:paddingRight="@dimen/dp_10"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/shape_trtl"/>
    </LinearLayout>

</LinearLayout>